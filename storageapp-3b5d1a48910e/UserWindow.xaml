<Window x:Class="Storage.UserWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Storage"
        mc:Ignorable="d"
        Title="Магазин" Height="500" Width="700" Background="White" 
        Loaded="Window_Loaded" Closing="Window_Closing" ContentRendered="Window_ContentRendered">
    <DockPanel x:Name="UserWindowDock">
        <StackPanel Style="{StaticResource OutPanel}"  VerticalAlignment="Top" Orientation="Horizontal" DockPanel.Dock="Top" FlowDirection="RightToLeft">
            <Button x:Name="UserLogoutButton" Content="Выход" Height="25" RenderTransformOrigin="0.474,-0.28" Margin="10,0" Click="UserLogoutButton_Click" Width="54"/>
            <Label x:Name="UserNameLabel" Content="Привет,  " FlowDirection="LeftToRight" Margin="20,10,10,10"/>
        </StackPanel>
        
    </DockPanel>
</Window>
    
